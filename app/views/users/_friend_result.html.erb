<div class="results-block">
    <%= render 'layouts/messages' %>
</div>
<% if @user_friends %>
    <div class="card card-header results-block"> 
        <table class="col-md-12">
            <tbody>
                <% @user_friends.each do |friend| %>
                    <tr>
                            <td> <strong>Email:  </strong><%= friend.email %>  </td>
                        <td><strong>Name:  </strong><%= friend.full_name  %>  </td>
                        <td>
                            <%= link_to "View Profile", "#", class: "btn btn-success"  %>
                            <% if current_user.not_friends_with?(friend.id)%>
                                <%= link_to 'Follow', friendships_path(friend: friend),
                                             class: "btn btn-success", method: :post%>
                            <%else%>
                                <span class="badge bg-secondary"> You are friends </span>
                            <%end%>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% end %>